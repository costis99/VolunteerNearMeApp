<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="Comp3200.volunteernearmeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VolunteerNearMeApp">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${GOOGLE_MAPS_API_KEY}" />
        <activity android:name=".LoadingScreenActivity"
            android:theme="@style/Theme.LoadingScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ForgotPassActivity"/>
        <activity android:name=".HomeOrganizersActivity"/>
        <activity android:name=".HomeVolunteersActivity"/>
        <activity android:name=".ViewEventsActivity"/>
        <activity android:name=".CreateEventActivity"/>
        <activity android:name=".EditProfileActivity"/>
        <activity android:name=".ProfileViewActivity"/>
    </application>

</manifest>